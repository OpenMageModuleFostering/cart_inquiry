<?xml version="1.0"?>
<config>
    <modules>
        <Ranosys_Inquiry>
            <version>0.1.0</version>
        </Ranosys_Inquiry>
    </modules>
    <frontend>
        <routers>
            <inquiry>
                <use>standard</use>
                <args>
                    <module>Ranosys_Inquiry</module>
                    <frontName>inquiry</frontName>
                </args>
            </inquiry>
        </routers>
        <layout>
            <updates>
                <inquiry>
                    <file>inquiry.xml</file>
                </inquiry>
            </updates>
        </layout>
    </frontend>
  <global>
        <models>
              <inquiry>
                <class>Ranosys_Inquiry_Model</class>
            </inquiry>
            <inquiry>
                <class>Ranosys_Inquiry_Model</class>
                <resourceModel>inquiry_mysql4</resourceModel>
            </inquiry>
            <inquiry_mysql4>
                <class>Ranosys_Inquiry_Model_Mysql4</class>
                <entities>
                    <inquiry>
                        <table>inquiry</table>
                    </inquiry>
                </entities>
            </inquiry_mysql4>
        </models>
        <resources>
            <inquiry_setup>
                <setup>
                    <module>Ranosys_Inquiry</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </inquiry_setup>
            <inquiry_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </inquiry_write>
            <inquiry_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </inquiry_read>
        </resources>
        <blocks>
            <inquiry>
                <class>Ranosys_Inquiry_Block</class>
            </inquiry>
        </blocks>
        <helpers>
            <inquiry>
                <class>Ranosys_Inquiry_Helper</class>
            </inquiry>
        </helpers>
        <template>
            <email>
                <inquiry_template  module="inquiry">
                    <label>Cart inquiry</label>
                    <file>inquiry_template.html</file>  // this specifies the path where the custom template is located
                    <type>html</type>
                </inquiry_template>
            </email>
        </template>
    </global>  
 <adminhtml>
        <menu>
            <inquiry module="inquiry">
                <title>Cart Inquiry</title>
                <sort_order>71</sort_order>               
                <children>
                    <inquiry module="inquiry">
                        <title>Details</title>
                        <sort_order>0</sort_order>
                        <action>inquiry/adminhtml_inquiry</action>
                    </inquiry>
                </children>
            </inquiry>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <inquiry>
                            <title>Inquiry Module</title>
                            <sort_order>200</sort_order>
                        </inquiry>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <ranosys>
                                            <title>Ranosys - All</title>
                                        </ranosys>
                                    </children>
                                </config>
                            </children>
                    </system>
                    </children>
                </admin>
            </resources>   
        </acl>
</adminhtml>    
</config>